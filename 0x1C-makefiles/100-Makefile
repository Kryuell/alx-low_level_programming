CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
NAME = school
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
RM = rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) *.o

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re

%.o: %.c m.h
	$(CC) -c $< -o $@ $(CFLAGS)